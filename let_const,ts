var foo = 123;
if (true) {
var foo = 456;
}
console.log(foo); // 456


let foo = 123;
if (true) {
let foo = 456;
}
console.log(foo); // 123


const foo = 123;
foo = 456; // NO permitido

const foo = { bar: 123 };
foo = { bar: 456 }; // ERROR no se permite la modificaci√≥n de objeto

const foo = { bar: 123 };
foo.bar = 456; // Permitido
console.log(foo); // { bar: 456 }


